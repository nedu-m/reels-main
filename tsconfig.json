{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["assets/*"],
      "@lib/*": ["lib/*"],
      "@helper/*": ["helper/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "./jest-setup.ts",
    "**/*.ts",
    "**/*.tsx",
    "helper/supabase.ts"
  ],
  "exclude": ["node_modules"]
}
